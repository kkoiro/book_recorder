<h1>Home#index</h1>

<% if user_signed_in? %>
<p>You are <%= @user.username %></p>
<p><%= link_to 'My page', user_path(@user) %></p>

<%= form_tag("/users/search", :method => :post) do %>
	<p>
	<%= label_tag :username %>
	<%= text_field_tag :username %>
	<%= submit_tag 'Search' %>
	</p>
<% end %>

<% if @users %>
	<% @users.each do |user|%>
		<p><%= link_to "#{user.username}", user_path(user) %></p>
	<% end %>
<% end %>

<p><%= link_to 'Edit account', edit_user_registration_path %></p>
<p><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></p>
<% else %>
	<p><%= link_to 'Login', new_user_session_path %></p>
	<p><%= link_to 'Sign Up', new_user_registration_path %></p>
<% end %>
