<h1>Listing books</h1>

<table>
	<tr>
		<th>Title</th>
	</tr>

	<% @books.each do |book| %>
		<tr>
			<td><%= link_to book.title, user_book_path(@user, book) %></td>
		</tr>
	<% end %>
</table>

<br />
<% if @user.id == current_user.id %>
<%= link_to 'New Book', new_user_book_path %>
<% end %>
<%= link_to 'User page', user_path(@user) %>
