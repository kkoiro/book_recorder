<div class="row">
	<h1><%= link_to "#{@user.username}", user_path(@user) %> book list</h1><br>
</div>

<div class="row">
<table class="table table-striped">
	<tr>
		<th>#</th>
		<th>Title</th>
	</tr>

	<% count = 1 %>
	<% @books.each do |book| %>
		<tr>
			<td><%= count %></td>
			<td><%= link_to book.title, user_book_path(@user, book) %></td>
		</tr>
	<% count += 1 %>
	<% end %>
</table>
</div>
<br />
