<h1>Listing books</h1>

<table>
	<tr>
		<th>Isbn</th>
		<th>Title</th>
		<th>User</th>
		<th></th>
	</tr>

	<% @books.each do |book| %>
		<tr>
			<td><%= book.isbn %></td>
			<td><%= book.title %></td>
			<td><%= book.user_id %></td>
			<td><%= link_to 'Show', [@user, book] %></td>
		</tr>
	<% end %>
</table>

<br />

<%= link_to 'New Book', new_user_book_path %>
<%= link_to 'My page', user_path(@user) %>
