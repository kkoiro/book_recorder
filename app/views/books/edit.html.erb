<h1>Editing book</h1>

<%= form_for(@book, :url => {:action => :update}) do |f| %>
	<% if @book.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

			<ul>
				<% @book.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :isbn %><br />
		<%= f.text_field :isbn %>
	</div>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :author %><br />
		<%= f.text_field :author %>
	</div>
	<div class="field">
		<%= f.label :manufacturer %><br />
		<%= f.text_field :manufacturer %>
	</div>
	<div class="field">
		<%= f.label :image %><br />
		<%= f.file_field :image, :accept => "image/jpeg" %>
	</div> 
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %> 

<%= link_to 'Show', user_book_path(@user, @book) %> |
