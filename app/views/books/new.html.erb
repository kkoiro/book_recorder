<div class="row">
<h1>Register book</h1>
</div>
<div class="row">
<div class="mes"></div>
<%= form_for(@book, :url => {:action => :create}) do |f| %>
	<% if @book.errors.any? %>
		<div id="error_explanation">
			<div class="alert fade in alert-danger "><button class="close" data-dismiss="alert" type="button">&times;</button>
				<h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

				<ul>
				<% @book.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
				</ul>
			</div>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :isbn %>
		<%= f.text_field :isbn, :class => "form-control" %>
	</div>
		<p><input type="button" id="info_search_button" class="btn btn-danger" value="検索"></p>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, :class => "form-control", :readonly => true %>
	</div>
	<div class="form-group">
		<%= f.label :author %>
		<%= f.text_field :author, :class => "form-control", :readonly => true %>
	</div>  
	<div class="form-group">
		<%= f.label :manufacturer %>
		<%= f.text_field :manufacturer, :class => "form-control", :readonly => true %>
	</div>
	<div class="form-group">
		<%= f.hidden_field :image_url, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.hidden_field :user_id, :class => "form-control" %>
	</div>
	<div class="actions">
		<%= f.submit('登録', :class => "btn btn-default") %>
	</div>
<% end %> 
</div><br>

<div class="row">
	<h3><%= link_to '本一覧', user_books_path %></h3>
</div>
