<h1>New book</h1>

<%= form_for(@book, :url => {:action => :create}) do |f| %>
	<% if @book.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

			<ul>
				<% @book.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :isbn %><br />
		<%= f.text_field :isbn %>
	</div>
	<input type="button" id="info_search_button" value="検索">
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title, :readonly => true %>
	</div>
	<div class="field">
		<%= f.label :author %><br />
		<%= f.text_field :author, :readonly => true %>
	</div>  
	<div class="field">
		<%= f.label :manufacturer %><br />
		<%= f.text_field :manufacturer, :readonly => true %>
	</div>
	<div class="field">
		<%= f.hidden_field :image_url %>
	</div>
	<div class="field">
		<%= f.hidden_field :user_id %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %> 

<%= link_to '一覧', user_books_path %>
